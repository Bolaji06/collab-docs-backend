generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Workspace {
  id        String   @id @default(uuid())
  name      String
  ownerId   String   @map("owner_id")
  isPremium Boolean  @default(false) @map("is_premium")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  owner      User              @relation("WorkspaceOwner", fields: [ownerId], references: [id])
  members    WorkspaceMember[]
  documents  Document[]
  folders    Folder[]
  activities Activity[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          String   @id @default(uuid())
  workspaceId String   @map("workspace_id")
  userId      String   @map("user_id")
  role        String   @default("MEMBER") // ADMIN, MEMBER
  joinedAt    DateTime @default(now()) @map("joined_at")

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@map("workspace_members")
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  username         String    @unique
  password         String?
  avatar           String?
  googleId         String?   @unique @map("google_id")
  isVerified       Boolean   @default(false) @map("is_verified")
  otp              String?
  otpExpiresAt     DateTime? @map("otp_expires_at")
  resetToken       String?   @map("reset_token")
  resetTokenExpiry DateTime? @map("reset_token_expiry")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  isPremium        Boolean   @default(false) @map("is_premium")

  ownedDocuments       Document[]           @relation("DocumentOwner")
  documentPermissions  DocumentPermission[]
  documentVersions     DocumentVersion[]
  comments             Comment[]
  commentReplies       CommentReply[]
  notifications        Notification[]
  folders              Folder[]
  tags                 Tag[]
  ownedWorkspaces      Workspace[]          @relation("WorkspaceOwner")
  workspaceMemberships WorkspaceMember[]
  activities           Activity[]
  commentReactions     CommentReaction[]
  resolvedComments     Comment[]            @relation("CommentResolver")

  @@map("users")
}

model Document {
  id         String   @id @default(uuid())
  title      String
  content    Json?
  ownerId    String   @map("owner_id")
  isPublic   Boolean  @default(false) @map("is_public")
  publicRole Role?    @map("public_role") // null = restricted, or use isPublic to toggle
  createdAt  DateTime @default(now()) @map("created_at")

  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  folderId  String?   @map("folder_id")

  owner       User       @relation("DocumentOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  workspaceId String?    @map("workspace_id")
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: SetNull)

  permissions DocumentPermission[]
  versions    DocumentVersion[]
  deltas      DocumentDelta[]
  comments    Comment[]
  folder      Folder?              @relation(fields: [folderId], references: [id], onDelete: SetNull)
  tags        DocumentTag[]
  activities  Activity[]

  @@index([ownerId])
  @@index([createdAt])
  @@map("documents")
}

model DocumentPermission {
  id         String   @id @default(uuid())
  documentId String   @map("document_id")
  userId     String   @map("user_id")
  role       Role     @default(VIEWER)
  grantedAt  DateTime @default(now()) @map("granted_at")

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([documentId, userId])
  @@index([documentId])
  @@index([userId])
  @@map("document_permissions")
}

enum Role {
  OWNER
  EDITOR
  VIEWER
}

model DocumentVersion {
  id            String   @id @default(uuid())
  documentId    String   @map("document_id")
  content       Json
  versionNumber Int      @map("version_number")
  createdBy     String   @map("created_by")
  createdAt     DateTime @default(now()) @map("created_at")

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@index([createdAt])
  @@map("document_versions")
}

model DocumentDelta {
  id         String   @id @default(uuid())
  documentId String   @map("document_id")
  userId     String   @map("user_id")
  operations Json
  version    Int
  timestamp  DateTime @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@index([timestamp])
  @@map("document_deltas")
}

model Comment {
  id            String   @id @default(uuid())
  documentId    String   @map("document_id")
  userId        String   @map("user_id")
  content       String
  positionStart Int      @map("position_start")
  positionEnd   Int      @map("position_end")
  resolved      Boolean  @default(false)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  document   Document          @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  replies    CommentReply[]
  resolvedBy String?           @map("resolved_by")
  resolver   User?             @relation("CommentResolver", fields: [resolvedBy], references: [id])
  reactions  CommentReaction[]
  outcome    String?           @map("outcome") // "DECIDED", "DEFERRED", "REJECTED"

  @@index([documentId])
  @@index([userId])
  @@map("comments")
}

model CommentReply {
  id        String   @id @default(uuid())
  commentId String   @map("comment_id")
  userId    String   @map("user_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([commentId])
  @@map("comment_replies")
}

model CommentReaction {
  id        String   @id @default(uuid())
  commentId String   @map("comment_id")
  userId    String   @map("user_id")
  emoji     String
  createdAt DateTime @default(now()) @map("created_at")

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId, emoji])
  @@map("comment_reactions")
}

model Notification {
  id         String           @id @default(uuid())
  userId     String           @map("user_id")
  type       NotificationType
  title      String
  message    String
  documentId String?          @map("document_id")
  isRead     Boolean          @default(false) @map("is_read")
  createdAt  DateTime         @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("notifications")
}

enum NotificationType {
  COMMENT
  SHARE
  SYSTEM
  MENTION
}

model Folder {
  id        String   @id @default(uuid())
  name      String
  color     String?
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspaceId String?    @map("workspace_id")
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: SetNull)
  documents   Document[]
  activities  Activity[]

  @@map("folders")
}

model Tag {
  id        String   @id @default(uuid())
  name      String
  userId    String   @map("user_id")
  color     String?
  createdAt DateTime @default(now()) @map("created_at")

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents DocumentTag[]

  @@unique([name, userId])
  @@map("tags")
}

model DocumentTag {
  documentId String @map("document_id")
  tagId      String @map("tag_id")

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  tag      Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([documentId, tagId])
  @@map("document_tags")
}

model Activity {
  id          String   @id @default(uuid())
  type        String // e.g., "COMMENT", "SHARE", "DOC_CREATE", "FOLD_CREATE", "DOC_RENAME"
  userId      String   @map("user_id")
  documentId  String?  @map("document_id")
  folderId    String?  @map("folder_id")
  workspaceId String?  @map("workspace_id")
  details     Json? // Extra metadata: { "title": "...", "folderName": "..." }
  createdAt   DateTime @default(now()) @map("created_at")

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  document  Document?  @relation(fields: [documentId], references: [id], onDelete: SetNull)
  folder    Folder?    @relation(fields: [folderId], references: [id], onDelete: SetNull)
  workspace Workspace? @relation(fields: [workspaceId], references: [id], onDelete: SetNull)

  @@map("activities")
}
